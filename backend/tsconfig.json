{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Desactiva la que te da el error al no inicializar propiedades:
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
